<%- include("partials/header.ejs") %>

<main>
    <% if(locals.blog && blog.length > 0) { %>
        <h1 class="main__title">Recent Blog</h1>
        <h2>Blog is created</h2>
        <% blog.forEach(data => { %>
                <div class="card">
                <h5 class="card-header"><%= data.title %></h5>
                <div class="card-body">
                <p><%= data.blog %></p>
                <p><span class="h5">Author:</span> <%= data.author %></p>
                <p><span class="h5">Date:</span> <%= data.date %></p>
                </div>
                </div>
        <%});%>
    <% } else { %>
    <h1 class="main__title">Welcome to Bloggers</h1>
    <form action="/submit" method="POST">
        <div class="form-group">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="title" placeholder="Enter the title" required>
        </div>
        <div class="form-group">
        <label class="form-label" for="blog">Blog</label>
        <input class="form-control" type="text" id="blog" name="blog" placeholder="Enter the blog" required>
        </div>
        <div class="form-group">
        <label class="form-label" for="author">Author</label>
        <input class="form-control" type="text" id="author" name="author" placeholder="Enter the author" required>
        </div>
        <div class="form-group">
        <label class="form-label" for="date">Date</label>
        <input class="form-control" type="date" id="date" name="date" placeholder="Enter the date" required>
        </div>
        <div class="form-group m-3">
        <input class="form-control btn btn-primary" type="submit"></input>
        </div>
    </form>
    <% } %>
</main>

<%- include("partials/footer.ejs") %>